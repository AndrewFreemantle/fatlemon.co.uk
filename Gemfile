source 'https://rubygems.org'
ruby RUBY_VERSION

# Github Pages blog using Jekyll:  http://fatlemon.github.io/
gem 'jekyll'

# Markdown support by redcarpet
gem 'redcarpet'

# Pagination
gem 'jekyll-paginate'

# Handle rewrites / redirects (for post slugs)
gem 'jekyll-redirect-from'

# Syntax highlighting
gem 'pygments.rb'

# Emoji support
gem 'gemoji'

group :jekyll_plugins do
  # Live reloading of posts while editing
  # https://github.com/awood/hawkins
  gem 'hawkins', "~> 2.0"
end

# Jekyll server: 0.0.0.0:4000
#  jekyll liveserve
#   - or -
#  bundle exec jekyll serve